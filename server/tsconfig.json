{
   "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*"
         ]
      }
   },
   "include": [
      "src/**/*"
   ]
}